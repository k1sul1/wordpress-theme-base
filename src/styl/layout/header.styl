.k1-header {
  &__beforeMenu {
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
  }

}

.k1-navigation {
  ul {
    margin: 0
    padding: 0
    list-style: none
  }

  > .k1-container {
    overflow: visible
  }
}

.k1-menu {
  position: relative
  display: block
  font-size: 0
  z-index: 1

  .menu-item {
    display: inline-block
    font-size: fs.p
    position: relative
    z-index: 2
    white-space: nowrap

    > a {
      padding: r(5px) r(15px)
      display: block
    }
  }

  .sub-menu {
    display: none
    position: absolute
    top: 100%
    z-index: 3
    max-width: r(200px)
    min-width: 100%

    .menu-item {
      display: block
      white-space: initial

      > .sub-menu {
        top: 0
        left: 100%
      }
    }
  }

  .menu-item-has-children {
    &:focus-within, // Note that this line breaks IE11
    &:hover,
    &.open { // .open is useful if you want to force the navigation open with JS
      > .sub-menu {
        display: block
      }
    }
  }
}
